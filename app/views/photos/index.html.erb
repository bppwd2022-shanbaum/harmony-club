<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Album</th>
      <th>Title</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.id %></td>
        <td><%= photo.album_id %></td>
        <td><%= photo.title %></td>
        <td><%= photo.created_at %></td>
        <td><%= photo.updated_at %></td>
        <td><%= link_to 'Show', photo, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path, class:"btn btn-success" %>
