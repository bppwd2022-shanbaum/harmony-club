<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Section</th>
      <th>Page type</th>
      <th>Permalink</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.id %></td>
        <td><%= page.title %></td>
        <td><%= page.section_id %></td>
        <td><%= page.page_type %></td>
        <td><%= page.permalink %></td>
        <td><%= page.created_at %></td>
        <td><%= page.updated_at %></td>
        <td><%= link_to 'Show', page, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_page_path(page), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path, class:"btn btn-success" %>
