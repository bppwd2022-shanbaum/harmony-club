<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-2"><strong><p>Title:</p></strong></div>
  <div class="col-sm-8"><p><%= @sponsor.title %></p></div>
</div>
<div class="row">
  <div class="col-sm-2"><strong><p>Website:</p></strong></div>
  <div class="col-sm-8"><p><%= @sponsor.website %></p></div>
</div>
<% if @sponsor.image.attached? %>
  <div class="row">
    <div class="col-sm-2"><strong><p>Image:</p></strong></div>
    <div class="col-sm-8"><p><%= image_tag @sponsor.image, class:"smaller" %></p></div>
  </div>
<% else %>
  <div class="row">
    <div class="col-sm-2"><strong><p>Image is NOT attached</p></strong></div>
  </div>
<% end %>


<%= link_to 'Edit', edit_sponsor_path(@sponsor) %> |
<%= link_to 'Back', sponsors_path %>
