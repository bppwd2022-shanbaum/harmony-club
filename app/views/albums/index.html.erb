<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.id %></td>
        <td><%= album.title %></td>
        <td><%= album.created_at %></td>
        <td><%= album.updated_at %></td>
        <td><%= link_to 'Show', album, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_album_path(album), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path, class:"btn btn-success" %>
