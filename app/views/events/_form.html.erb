<div class="row">
  <%= form_with(model: event) do |form| %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
          <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-sm-2"><strong><p><%= form.label :title %></p></strong></div>
      <div class="col-sm-8"><%= form.text_field  :title %></div>    
    </div>
    <div class="row">
      <div class="col-sm-2"><strong><p><%= form.label :details %></p></strong></div>
      <div class="col-sm-8"><%= form.text_area  :details %></div>    
    </div>

    <div class="actions">
      <%= form.submit class:"btn btn-primary" %>
    </div>
  <% end %>
</div>