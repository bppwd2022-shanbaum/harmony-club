<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Location</th>
      <th>Title</th>
      <th>Visible</th>
      <th>Position</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.id %> </td>
        <td><%= section.location %></td>
        <td><%= section.title %></td>
        <td><%= section.visible %></td>
        <td><%= section.position %></td>
        <td><%= section.created_at %></td>
        <td><%= section.updated_at %></td>
        <td><%= link_to 'Show', section, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_section_path(section), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path, class:"btn btn-success" %>
